<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunqiic.mangixuploader.dao.FileDao">
    <resultMap id="BaseResultMap" type="com.yunqiic.mangixuploader.model.File">
        <id column="file_id" property="fileId" />
        <result column="app_id" property="appId" />
        <result column="app_file_id" property="appFileId" />
        <result column="file_name" property="fileName" />
        <result column="md5" property="md5" />
        <result column="path" property="path" />
        <result column="upload_time" property="uploadTime" />
    </resultMap>

    <sql id="Base_Column_List">
        file_id,app_id,app_file_id,file_name,md5,path,upload_time
    </sql>

    <select id="getById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file
        where file_id = #{fileId}
    </select>

    <insert id="save" parameterType="com.yunqiic.mangixuploader.model.File" keyProperty="fileId" useGeneratedKeys="true">
        insert into file(app_id,app_file_id,file_name,md5,path,upload_time) values(#{appId},#{appFileId},#{fileName},#{md5},#{path},#{uploadTime})
    </insert>

    <update id="update" parameterType="com.yunqiic.mangixuploader.model.File" >
        <if test="fileId != null">
            update file
            <set>
                <if test="appId != null">
                    app_id = #{appId},
                </if>
                <if test="appFileId != null">
                    app_file_id = #{appFileId},
                </if>
                <if test="fileName != null">
                    file_name = #{fileName},
                </if>
                <if test="md5 != null">
                    md5 = #{md5},
                </if>
                <if test="path != null">
                    path = #{path},
                </if>
                <if test="uploadTime != null">
                    upload_time = #{uploadTime},
                </if>
            </set>
            where file_id = #{fileId}
        </if>
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from file where file_id = #{fileId}
    </delete>

    <select id="getByFile" parameterType="com.yunqiic.mangixuploader.model.File" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from file
        <where>
            1=1
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
            <if test="appId != null">
                and app_id = #{appId}
            </if>
            <if test="appFileId != null">
                and app_file_id = #{appFileId}
            </if>
            <if test="fileName != null">
                and file_name = #{fileName}
            </if>
            <if test="md5 != null">
                and md5 = #{md5}
            </if>
            <if test="path != null">
                and path = #{path}
            </if>
            <if test="uploadTime != null">
                and upload_time = #{uploadTime}
            </if>
        </where>
    </select>
</mapper>